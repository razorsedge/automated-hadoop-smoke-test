# flags

# Set true for services to be tested
HDFS="true"
MAPREDUCE="false"
HIVE="true"
HBASE="false"
IMPALA="false"
SPARK="false"
SPARK2="false"
PIG="false"
SOLR="false"
KAFKA="false"
KUDU="false"
KUDU_SPARK="false"
NIFI="false"

#Specify security enabled or not
SECURITY="false"
SECURITY_HIVE="false"

# KRB Details
KRB_KEYTAB="/var/run/cloudera-scm-agent/process/17-hdfs-NAMENODE/hdfs.keytab" # <-- update
KRB_PRINCIPAL="hdfs/quickstart.cloudera@CLOUDERA" # <-- update

# KRB Details for hive (Update if security_hive flag is set to true)
